#passwordgenerator
import random
list_of_num=list()
list_of_alphabets=list()
list_of_sym=list()
for i in range(256):
    if(i>96 and i<123):
       list_of_alphabets.append(chr(i))
    elif(i>64 and i<92):
       list_of_alphabets.append(chr(i))
    elif(i>47 and i<59):
       list_of_num.append(chr(i))
    else:
        list_of_sym.append(chr(i))
lp=""
letters=int(input("Enter no.of lettrs you need in password:"))
for i in range(letters):
    lp=lp+random.choice(list_of_alphabets)
    lp+=","
symbols=int(input("Enter no.of symbols you need in password:"))
for i in range(symbols):
    lp=lp+random.choice(list_of_sym)
    lp += ","
num=int(input("Enter no.of numbers you need in password:"))
for i in range(num):
    lp=lp+random.choice(list_of_num)
    if(i==num-1):
        break
    lp += ","
lplist=lp.split(",")
password=""
for i in lplist:
    password+=random.choice(lplist)
print(password)

